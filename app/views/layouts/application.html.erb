<!DOCTYPE html>
<html>
  <head>
    <title>Fimeshop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
	<nav class="navbar navbar-expand-lg navbar-light">
		<a class="navbar-brand md-0 h1" href="#">FIME</a>
		<div class="collapse navbar-collapse nav-right">
			<ul class="navbar-nav mr-auto">
				<div class="col-md-3">
					<li class="navbar-item active ">
						<a class="nav-link" href="">Nuevo <span class="sr-only">(current)</span></a>
					</li>
				</div>
				<div class="col-md-3">
					<li class="navbar-item active ">
						<%= link_to 'Desktop', {controller:  :home, action: :desktop}, class: 'nav-link' %>
					</li>
				</div>
				<div class="col-md-3">
					<li class="navbar-item active ">
						<%= link_to 'Vestimenta', {controller: :home, action: :vestimenta}, class: 'nav-link' %>
					</li>
				</div>
				<div class="col-md-3">
					<li class="navbar-item active ">
						<%= link_to 'Accesorios', {controller: :home, action: :accesorios}, class: 'nav-link' %>
					</li>
					</div>
				<div class="col-md-3">
					<li class="navbar-item active ">
						<%= link_to 'Termos', {controller: :home, action: :termos}, class: 'nav-link' %>
					</li>
				</div>
				<div class="col-md-3">
					<li class="navbar-item active ">
						<%= link_to 'Otros', {controller: :home, action: :otros}, class: 'nav-link' %>
					</li>
				</div>

				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          User
					</a>
					<div class="dropdown-menu" aria-labelledby="navbarDropdown">
					  <% if user_signed_in? %>
						<%= link_to 'Publicar', new_product_path, class: 'dropdown-item' %>
						<%= link_to 'lista', products_path, class: 'dropdown-item' %>
						<div class="dropdown-divider"></div>
						<%= link_to 'Salir', destroy_user_session_path , method: "delete", class: 'dropdown-item' %>
					  <% else %>
						  <%= link_to 'sign in', user_session_path, class:"dropdown-item" %>
						  <%= link_to 'sign up', new_user_registration_path, class:"dropdown-item" %>
					  <% end %>
					</div>
				</li>
			</ul>
		</div>
	</nav>
	<div class="container">
		<%= yield %>
	</div>
  </body>
</html>
