<h1 class="display-1">Productos</h1>
<div class="card-columns">
	<% @products.each do |product| %>
	<div class="card">
	<%= image_tag product.picture.medium.url, class: 'card-img-top'%>
	<div class="card-body">	
		<%= product.description %><br>
	<%= link_to product.name, product %><br><%= link_to 'Edit', edit_product_path( product ) %><br><%= link_to 'delete', product, method: :delete, data: {confirm: 'sure?' } %>  
	</div>
	</div>
	<br>
<% end %>
</div>
