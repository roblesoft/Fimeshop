<h1 class="display-1">Productos</h1>
<div class="card-columns">
	<% @products.each do |product| %>
		<% if product.available %>
			<div class="card text-white border-success md-3 card-transform" style="width: 21rem">
				<%= image_tag product.picture.medium.url, class: 'card-img-top'%>
				<div class="card-header"><h3 class="card-title"><%= link_to product.name, product, class:"text-success" %></h3></div>
				<div class="card-body">	
						<p class="card-text text-primary lead ">$<%= product.price %></p>
						<p class="card-text text-success lead"><%= product.description %></p>
				</div>
				<div class="card-footer text-right"><div class="btn-group btn-group-toggle"><%= link_to 'Edit', edit_product_path( product ) , class:"btn btn-primary"%><%= link_to 'delete', product, method: :delete, data: {confirm: 'sure?' } , class:"btn btn-warning"%></div></div>  
			</div>
		<% else %>
			<div class="card text-white border-danger md-3 card-transform" style="width: 21rem">
				<%= image_tag product.picture.medium.url, class: 'card-img-top'%>
				<div class="card-header"><h3 class="card-title"><%= link_to product.name, product, class:"text-danger" %></h3></div>
				<div class="card-body">	
						<p class="card-text text-primary lead ">$<%= product.price %></p>
						<p class="card-text text-danger lead"><%= product.description %></p>
				</div>
				<div class="card-footer text-right"><div class="btn-group btn-group-toggle"><%= link_to 'Edit', edit_product_path( product ) ,remote: true, class:"btn btn-primary"%><%= link_to 'delete', product, method: :delete, data: {confirm: 'sure?' } , class:"btn btn-warning"%></div></div>  
			</div>
		<% end %>
	<% end %>
</div>
