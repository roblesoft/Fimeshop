<div class="row justify-content-end">
	<div class="col-md-6"><h1 class="display-1"><%= @product.name %></h1></div>
</div>
<div class="row">
	<div class="col-md-6"><figcaption class="figure_caption"><%= image_tag @product.picture.thumb.url, class: ' figure-img img-fluid rounded'%></figcaption></div>
	<div class="col-md-6">
		<div class="card text-white bg-success">
			  <div class="card-body">
					<h5 class="display-5">Descripcion:</h5>
					<p class="lead"><%= @product.description%></p>
					<h5 class="display-5">Precio:</h5>
					<p class="lead" >$<%= @product.price %></p>
					<% if @product.available %>
						<h5 class="display-5">Disponible</h5>
					<% else %>
						<h5 class="display-5">No disponible</h5>
					<% end %>
					<h5 class="display-5">Categoria:</h5>
					<p class="lead"><%= @product.category %></p>
					<button type="button" class="btn btn-light">separar</button>
					<button type="button" class="btn btn-light">Agregar al carrito</button>
			 </div>
		</div>
	</div>
</div>
